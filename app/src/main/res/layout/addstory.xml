<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addstory"
    android:background="@drawable/bb"
    >




        <include
            android:id="@+id/app_bar_home"
            layout="@layout/app_bar_addstory"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="78dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayoutCompat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <TextView
                android:id="@+id/addnewstory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Story"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.468"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat"
                app:layout_constraintVertical_bias="0.0" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/addnewstroyheaderwrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/addstroytitlewraper"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addnewstory">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/addnewstorycategorcontainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.6"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addnewstory">

                        <TextView
                            android:id="@+id/addstorycategorylabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/lableshapebg"
                            android:layout_marginRight="8dp"
                            android:paddingLeft="10dp"
                            android:text="Story category:"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </TextView>

                        <EditText
                            android:id="@+id/addstorycategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/shapebg"
                            android:hint="Story Category"
                            android:padding="5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></EditText>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/addnewstorytitlecontainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/addnewstoryauthorcontainer"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addnewstoryauthorcontainer">

                        <TextView
                            android:id="@+id/addstorytitlelabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/lableshapebg"
                            android:paddingLeft="10dp"
                            android:text="Story Title:"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </TextView>

                        <EditText
                            android:id="@+id/addstorytitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shapebg"
                            android:hint=" Story Title"
                            android:padding="5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></EditText>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/addnewstoryepisodenamecontainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/addnewstorytitlecontainer"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addnewstorytitlecontainer">

                        <TextView
                            android:id="@+id/addstoryepisodenamelabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/lableshapebg"
                            android:paddingLeft="10dp"
                            android:text="Story Name:"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </TextView>

                        <EditText
                            android:id="@+id/addstoryepisodename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shapebg"
                            android:hint="Episode Name"
                            android:padding="5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></EditText>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/addnewstoryauthorcontainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/addnewstorycategorcontainer"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addnewstorycategorcontainer">

                        <TextView
                            android:id="@+id/addstoryauthorlabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/lableshapebg"
                            android:paddingLeft="10dp"
                            android:text="Author Name:"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </TextView>

                        <EditText
                            android:id="@+id/addstoryauthorname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shapebg"
                            android:hint="Author name"
                            android:padding="5dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold|italic"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></EditText>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/userprofilephoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shapebg"
                        android:ems="10"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/addnewstoryepisodenamecontainer"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/addnewstoryepisodenamecontainer"
                        app:layout_constraintTop_toBottomOf="@+id/addnewstoryepisodenamecontainer">

                        <ImageView
                            android:id="@+id/episodeprofilephoto"
                            android:layout_width="150dp"
                            android:layout_height="90dp"
                            android:layout_margin="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shapebg"
                            android:orientation="horizontal"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toTopOf="@id/imageButton"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/episodeprofilephoto"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.785"
                            app:layout_constraintStart_toEndOf="@+id/episodeprofilephoto"
                            app:layout_constraintTop_toTopOf="@+id/episodeprofilephoto">

                            <Button
                                android:id="@+id/imageButton"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:text="Story Picture"
                                android:textSize="11dp" />

                            <Button
                                android:id="@+id/sendButton"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:text="Upload photo"
                                android:textSize="12dp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/addnewstroyheaderwrapper">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/addnewstorycontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/addstorycontent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="Write your story here"
                            android:minHeight="300dp"
                            android:textAlignment="center"></EditText>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </ScrollView>

                <Button
                    android:id="@+id/btnsave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/buttonbg"
                    android:text="SAVE"
                    android:textColor="#F7121111"
                    app:backgroundTint="#00BCD4"
                    app:layout_constraintEnd_toEndOf="@+id/scrollView2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/scrollView2"
                    app:layout_constraintTop_toBottomOf="@+id/scrollView2" />




            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>